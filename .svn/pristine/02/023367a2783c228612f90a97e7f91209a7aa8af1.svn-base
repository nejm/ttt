<div class="modal-content">
    <div class="modal-header"><h4 class="modal-title">Ajouter un role</h4></div>
    <div class="modal-body">
        <form>
            <div class="form-group">
                <label for="name" class="col-form-label">Nom:</label>
                <input type="text" class="form-control" ng-model="role" id="name">
            </div>
            <div class="form-group">
                <label for="text" class="col-form-label">Description:</label>
                <textarea id="text" class="form-control" ng-model="roleDesc" cols="5" rows="10" style="resize: none"></textarea>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" ng-click="saveRole(role,roleDesc)">Ajouter</button>
        <button type="button" class="btn btn-default" ng-click="closeModal()">Fermer</button>
    </div>
</div>

