

<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" ng-click="closeModal()">&times;</button>
        <h4 class="modal-title">Ajouter un service</h4>
    </div>
    <div class="modal-body">
        <form>
            <div class="form-group hidden">
                <label for="id">Id</label> 
                <input type="text"
                       ng-model="service.id" class="form-control" id="idservice"
                       placeholder="id">
            </div>
            <div class="form-group">
                <label for="nom">Nom</label> 
                <input type="text"
                       ng-model="service.name" class="form-control" id="nomservice"
                       placeholder="Nom">
            </div>
            <div class="form-group" ng-if="currentRessource.type=='ws'">
                <label for="url">Url</label> 
                <input type="text"
                       class="form-control" id="urlservice" disabled
                       placeholder="{{currentRessource.url}}"
                       ng-model="currentRessource.url">
            </div>
            <div class="form-group" ng-if="currentRessource.type=='db'">
                <label for="url">Url</label> 
                <input type="text"
                       class="form-control" id="urlservice" disabled
                       placeholder="{{currentRessource.serverType}}://{{currentRessource.address}}"
                       ng-model="currentRessource.url">
            </div>
            <div class="form-group">
                <label for="url" ng-if="currentRessource.type=='ws'">SubUrl</label> 
                <label for="url" ng-if="currentRessource.type=='db'">Table</label> 
                <input type="text"
                       ng-model="service.suburl" class="form-control"
                       id="suburlservice" placeholder="subUrl">
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary"
                ng-click="addService(service, 'null')">Ajouter</button>
        <button type="button" class="btn btn-default" ng-click="closeModal()">Fermer</button>
    </div>
</div>
