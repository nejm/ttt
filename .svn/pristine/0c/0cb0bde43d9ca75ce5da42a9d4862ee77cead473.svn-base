<div class="modal-content">
    <div class="modal-header"><h4 class="modal-title">Description</h4></div>
    <div class="modal-body">
        <form>
            <div class="form-group">
                <label>Titre : </label>
                <input type="text" class="form-control" ng-model="dashDesc.title"></input>
            </div>
            <div class="form-group">
                <label>Description : </label>
                <textarea class="form-control" ng-model="dashDesc.desc" rows="8"></textarea>
            </div>
        </form>
        
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" ng-click="addDesc()">Ajouter</button>
        <button type="button" class="btn btn-default" ng-click="closeModal()">Fermer</button>
    </div>
</div>

